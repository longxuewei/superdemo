<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.pili.pldroid.player.widget.PLVideoTextureView
        android:id="@+id/mPlayerPtv"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/mBufferIndicatorIv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="@id/mPlayerPtv"
        app:layout_constraintLeft_toLeftOf="@id/mPlayerPtv"
        app:layout_constraintRight_toRightOf="@id/mPlayerPtv"
        app:layout_constraintTop_toTopOf="@id/mPlayerPtv" />

</android.support.constraint.ConstraintLayout>